<UserControl x:Class="Evol_UI.PokemonChoiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Evol_UI"
             xmlns:pokemath="clr-namespace:PokeMath;assembly=PokeMath"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type pokemath:Pokemon}">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <local:PokemonControlSmall Pokemon="{Binding}" VerticalAlignment="Stretch"/>
                    <Button Content="Summary"/>
                    <Button Content="Shift"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid Name="LayoutRoot">
        <ListBox ItemsSource="{Binding Trainer.Team}" HorizontalContentAlignment="Stretch"/>
    </Grid>
</UserControl>
