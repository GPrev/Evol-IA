<UserControl x:Class="Evol_UI.MoveChoiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Evol_UI"
             xmlns:pokemath="clr-namespace:PokeMath;assembly=PokeMath"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type pokemath:Move}">
            <Grid>
                <Border BorderThickness="1" BorderBrush="DarkGray" >
                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Stretch" TextAlignment="Center" />
                </Border>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid Name="LayoutRoot">
        <ListBox ItemsSource="{Binding Pokemon.Moves}" 
                 IsSynchronizedWithCurrentItem="True" 
                 SelectedValue="{Binding Selected, Mode=TwoWay}"
                 HorizontalContentAlignment="Stretch"/>
    </Grid>
</UserControl>
